extends layout

block content
  .w3-container
   .w3-card-4
    header.w3-container.w3-teal
     h3 Catálogo de ficheiros
      .w3-container
       table.w3-table
        tr
          th Nome
          th Descrição
          th Timestamp
        tr
        each ficheiro in ficheiros
          tr
            td
              a(href= "/"+ficheiro.name)= ficheiro.name
            td= ficheiro.desc
            td= ficheiro.timestamp
    footer
      address gerado por FormApp
        p
          a(href='/') Voltar à pagina principal