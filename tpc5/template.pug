extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.light-grey
                h1= pub.titulo
            .w3-container
                table.w3-table.w3-all
                    tr
                        th Tipo
                        td= pub.tipo
                    tr
                        th Compositor
                        td= pub.compositor
                    tr 
                        th Instrumentos
                        td
                            ul
                                each inst in pub.instrumentos
                                    li= inst.nome
            footer.w3-container.w3-light-grey
                address Gerado por PartiApp